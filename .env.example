# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py

# Security
SECRET_KEY=change-this-to-random-secret-key-in-production

# Database
DATABASE_URL=sqlite:///instance/crm_ub.db
# For PostgreSQL in production:
# DATABASE_URL=postgresql://username:password@localhost/crm_ub

# Logging
LOG_LEVEL=INFO

# Application
APP_NAME=Universal Bank CRM
ITEMS_PER_PAGE=25

# Timezone
TIMEZONE=Europe/Sarajevo

# Features
ENABLE_AUDIT_LOG=True
ENABLE_MONITORING=True
